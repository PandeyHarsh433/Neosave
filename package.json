{
  "name": "spendly",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:mobile": "turbo run start --filter=mobile",
    "dev:backend": "turbo run start:dev --filter=backend",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "clean:install": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules && npm install"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.4.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}

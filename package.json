{
  "name": "neosave",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:mobile": "turbo run start --filter=mobile",
    "dev:backend": "turbo run start:dev --filter=backend",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "clean:install": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules && npm install"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.4.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "pg": "^8.16.3",
    "typeorm": "^0.3.26"
  }
}
